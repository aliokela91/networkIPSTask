<?xml version="1.0" encoding="utf-8"?><LinearLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="vertical"    android:layout_marginBottom="7dp">    <LinearLayout        android:layout_margin="20dp"        android:orientation="vertical"        android:layout_width="match_parent"        android:layout_height="wrap_content">        <LinearLayout            android:gravity="center"            android:layout_gravity="start"            android:background="@color/colorPrimaryDark"            android:padding="10dp"            android:layout_width="wrap_content"            android:layout_height="wrap_content">            <TextView                android:text="@string/most_popular"                android:gravity="start"                android:layout_gravity="start"                android:textStyle="bold"                android:textSize="18sp"                android:textColor="@color/white"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:id="@+id/tv_category_name" />        </LinearLayout>        <LinearLayout            android:background="@color/colorPrimaryDark"            android:layout_width="match_parent"            android:layout_height="2dp" />    </LinearLayout>    <androidx.recyclerview.widget.RecyclerView        android:id="@+id/recycler_posts"        android:layout_width="match_parent"        android:layout_height="wrap_content" />    <ImageView        android:visibility="gone"        android:scaleType="centerCrop"        android:id="@+id/iv_category_image"        android:layout_width="match_parent"        android:layout_height="match_parent" />    <TextView        android:visibility="gone"        android:textColor="@color/white"        android:textSize="20sp"        android:layout_gravity="center"        android:layout_width="wrap_content"        android:layout_height="wrap_content" /></LinearLayout>