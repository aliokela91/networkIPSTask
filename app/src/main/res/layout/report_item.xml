<?xml version="1.0" encoding="utf-8"?><androidx.cardview.widget.CardView    android:layout_margin="10dp"    app:contentPadding="10dp"    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="horizontal"    xmlns:app="http://schemas.android.com/apk/res-auto"><LinearLayout    android:layout_width="match_parent"    android:layout_height="wrap_content"    android:orientation="horizontal">    <FrameLayout        android:layout_width="wrap_content"        android:layout_height="wrap_content">    <ImageView        android:scaleType="fitXY"        android:id="@+id/iv_report_item"        android:layout_width="140dp"        android:layout_height="120dp" />        <TextView            android:textSize="10sp"            android:textStyle="bold"            android:textColor="@color/white"            android:layout_marginEnd="5dp"            android:id="@+id/tv_date"            android:layout_gravity="bottom|end"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />    </FrameLayout>    <LinearLayout        android:padding="10dp"        android:orientation="vertical"        android:layout_width="match_parent"        android:layout_height="match_parent">        <TextView            android:textSize="17sp"            android:textColor="@color/black"            android:id="@+id/tv_title"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />        <TextView            android:textStyle="bold"            android:textSize="12sp"            android:textColor="@color/colorPrimaryDark"            android:id="@+id/tv_byline"            android:layout_width="wrap_content"            android:layout_height="wrap_content" />        <TextView            android:layout_marginTop="5dp"            android:id="@+id/tv_details"            android:lines="5"            android:layout_width="match_parent"            android:layout_height="match_parent" />    </LinearLayout></LinearLayout></androidx.cardview.widget.CardView>